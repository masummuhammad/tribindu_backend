{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
         "esModuleInterop": true,
          "noImplicitAny": true,
         "resolveJsonModule": true,
      "moduleResolution": "node",
      "outDir": "dist",
    "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
       "paths":{
         "*": ["node_modules/*"]
       }
   },
      "include": ["src/**/*"]
}
